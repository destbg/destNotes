<Window x:Class="destNotes.View.TaskTransfer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True"
        Title="TaskTransfer" Height="50" Width="200">
    <Window.Background>
        <SolidColorBrush Opacity="0.9" Color="{Binding Path=Color, Source={StaticResource BackgroundColor}}"/>
    </Window.Background>
    <TextBox Margin="10" IsReadOnly="True" TextWrapping="NoWrap" AcceptsReturn="False" Name="OnlyTextBox"/>
</Window>